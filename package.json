{
  "name": "baby-shower-app",
  "version": "1.0.0",
  "description": "Baby Shower App - A celebration platform with guestbook, voting, pool prediction, quiz, and advice activities",
  "scripts": {
    "dev": "node scripts/dev-server.js",
    "dev:node": "npx http-server . -p 3000 -c-1",
    "dev:fast": "npx http-server . -p 3000 -c-1",
    "dev:bun": "bun run --hot --port 3000 scripts/dev-server.js",
    "deploy": "node scripts/commit.js && git push origin main",
    "deploy:node": "npm run commit && npm run push",
    "deploy:bun": "bun run commit && git push origin main",
    "commit": "node scripts/commit.js",
    "push": "git push origin main",
    "push:bun": "bun run commit && git push origin main",
    "status": "git status",
    "add": "git add .",
    "test": "playwright test --config=tests/playwright.config.js",
    "test:ui": "playwright test --config=tests/playwright.config.js --ui",
    "test:headed": "playwright test --config=tests/playwright.config.js --headed",
    "test:debug": "playwright test --config=tests/playwright.config.js --debug",
    "test:ci": "playwright test --config=tests/playwright.config.js --project=chromium --project=firefox --project=webkit",
    "test:api": "playwright test --config=tests/playwright.config.js baby-shower.test.js --grep=\"API Integration\"",
    "test:frontend": "playwright test --config=tests/playwright.config.js baby-shower.test.js --grep=\"Frontend Functionality\"",
    "test:db": "playwright test --config=tests/playwright.config.js baby-shower.test.js --grep=\"Database Verification\"",
    "test:errors": "playwright test --config=tests/playwright.config.js baby-shower.test.js --grep=\"Error Handling\"",
    "test:flow": "playwright test --config=tests/playwright.config.js baby-shower.test.js --grep=\"Data Flow\"",
    "test:chromium": "playwright test --config=tests/playwright.config.js --project=chromium",
    "test:firefox": "playwright test --config=tests/playwright.config.js --project=firefox",
    "test:webkit": "playwright test --config=tests/playwright.config.js --project=webkit",
    "test:mobile": "playwright test --config=tests/playwright.config.js --project=mobile-chrome --project=mobile-safari",
    "test:report": "playwright show-report test-results/html-report",
    "test:install": "playwright install --with-deps chromium firefox webkit",
    "test:install:chromium": "playwright install chromium",
    "test:install:firefox": "playwright install firefox",
    "test:install:webkit": "playwright install webkit",
    "test:clean": "rm -rf test-results tests/e2e/.auth",
    "test:generate": "node tests/e2e/data-generator.js",
    "inject:env": "node scripts/inject-env.js",
    "inject:env:node": "node scripts/inject-env.js",
    "inject:env:bun": "bun run scripts/inject-env.js",
    "bundle": "npx esbuild index.html --bundle --outdir=./dist --minify --loader:.html=text",
    "bundle:analyze": "npx esbuild index.html --bundle --outdir=./dist --analyze --loader:.html=text"
  },
  "dependencies": {
    "playwright": "^1.57.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@supabase/supabase-js": "^2.89.0",
    "dotenv": "^17.2.3",
    "jsonwebtoken": "^9.0.3"
  },
  "keywords": [
    "baby-shower",
    "e2e-tests",
    "playwright",
    "supabase",
    "edge-functions",
    "testing",
    "nodejs"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "node@18.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/baby-shower.git"
  },
  "description": "Baby Shower App - Node.js for cross-platform compatibility (Bun has segmentation fault issues on Windows)"
}